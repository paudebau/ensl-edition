\newcommand{\coqcomment}[1]{{\rendercoqcomment{\begin{tmindent}
  (*#1*)
\end{tmindent}}}}
\newcommand{\coqcoqdoc}[1]{{\rendercoqcomment{\begin{tmindent}
  (** #1 *)
\end{tmindent}}}}
\newcommand{\coqdoccoq}[1]{{\color[HTML]{\coqcolornormal}{\small \tmtexttt{#1}}}}
