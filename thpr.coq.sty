\newenvironment{tmparmod}[3]{\begin{list}{}{%
      \setlength{\topsep}{0pt}
      \setlength{\leftmargin}{#1}
      \setlength{\rightmargin}{#2}
      \setlength{\parindent}{#3}
      \setlength{\listparindent}{\parindent}
      \setlength{\itemindent}{\parindent}
      \setlength{\parsep}{\parskip}} \item[]}{\end{list}}
               
\newenvironment{tmindent}{\begin{tmparmod}{1.5em}{0pt}{0pt} }{\end{tmparmod}}

\newcommand{\theoremsep}{ }
\newcommand{\coqprompt}[1]{Coq] }
\newcommand{\coqinput}[2]{{\genericinput{#1}{#2}}}
\newcommand{\coqoutput}[1]{{\genericoutput{#1}}}
\newcommand{\coqsection}[2]{\section*{#1}

#2}
\newcommand{\coqcommand}[3]{\color[HTML]{000000}#3} % #1 est l'ID, #2 est la couleur dans le modele HTML

\newenvironment{rendertheorem}[2]{\noindent\textbf{#1\ }}{\hspace*{\fill}\medskip}

\newcommand{\coqenunciation}[5]{{\rendertheorem{#3}{
      \tmtextit{{\color[HTML]{008000}#4}} {\color[HTML]{000000}#5}}}}

\newenvironment{renderproof}[1]{\noindent\textbf{#1\ }}{\hspace*{\fill}$\Box$\medskip}
\newcommand{\coqproof}[4]{{\color[HTML]{000000}\begin{renderproof}{#3}
  #4
\end{renderproof}}}

